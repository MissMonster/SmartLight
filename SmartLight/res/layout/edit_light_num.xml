<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/edit_light_num_edittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        android:ems="8"
        android:gravity="center" 
        android:textColor="#000000"
        android:digits="0123456789"
        android:inputType="number"
        android:hint="请输入路灯编号"
        android:maxLength="3"
        android:textSize="16sp" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/setlightnum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="设置路灯编号"
        android:textColor="#000000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/setnum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_light_num_edittext"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:textColor="#000000"
        android:text="TextView" 
        android:visibility="invisible"/>/>

    <TextView
        android:id="@+id/setnumstate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/setnum"
        android:layout_centerHorizontal="true"
        android:text="TextView"
        android:visibility="gone"/>

</RelativeLayout>
