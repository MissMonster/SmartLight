<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <ImageView
        android:id="@+id/bluetoothpng"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/deviceaddr"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="8dp"
        android:src="@drawable/bluetooth_blue" />

    <TextView
        android:id="@+id/devicename"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/bluetoothpng"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/bondstate"
        android:layout_marginLeft="5dp"
        android:paddingTop="5dp"
        android:textSize="15dp"
        android:text="TextView" />
    
    
     <TextView
        android:id="@+id/bondstate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/scanstate"
        android:paddingTop="13dp"
        android:textSize="15dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/deviceaddr"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/devicename"
        android:layout_toRightOf="@+id/bluetoothpng"
        android:layout_marginLeft="5dp"
        android:paddingBottom="5dp"
        android:text="TextView" />
    
    <ProgressBar 
        android:id="@+id/scanstate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="4dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:visibility="invisible"
        style="?android:attr/progressBarStyleSmall" />


</RelativeLayout>
