<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <TextView
        android:id="@+id/viewparameter_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" 
        android:layout_marginTop="80dp"
        android:textSize="24sp"
        android:text="路灯参数查看" />
    
    <EditText
        android:id="@+id/viewparameter_lightnum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/viewparameter_title"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:hint="请输入路灯编号"
        android:digits="0123456789"
        android:inputType="number"
        android:maxLength="3"
        android:ems="8" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/viewparameter_confirm"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/viewparameter_lightnum"
        android:layout_marginTop="20dp"
        android:background="@drawable/round_button"
        android:textColor="#ffffff"
        android:text="确定" />

    
    <ListView 
        android:id="@+id/viewparameter_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/viewparameter_confirm"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        ></ListView>
    
      <TextView
        android:id="@+id/viewparameter_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewparameter_confirm"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="" />
    
    


</RelativeLayout>
